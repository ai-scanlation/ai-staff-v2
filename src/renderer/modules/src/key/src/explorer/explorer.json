{
    "@case:views.view": {
        "explorer": {
            "@key": {
                "ctrl+pageup": ["explorer.previousFolder"],
                "ctrl+pagedown": ["explorer.nextFolder"],
                "pageup": ["explorer.arrow", "pageup"],
                "pagedown": ["explorer.arrow", "pagedown"],
                "home": ["explorer.arrow", "home"],
                "end": ["explorer.arrow", "end"],
                "f5": ["explorer.explorer"],
                "f6": ["explorer.folderPath", "{explorer.defaultFolder_1}"],
                "f7": ["explorer.folderPath", "{explorer.defaultFolder_2}"],
                "f8": ["explorer.folderPath", "{explorer.defaultFolder_3}"],
                "f12": ["tabs[explorer-explorerMode].toggleMode"],
                "ctrl+f12": ["tabs[explorer-explorerMode].toggleMode", true],

                "enter": ["explorer.enter"],
                "space": ["explorer.enter", true],
                "ctrl+enter": ["explorer.ctrl+enter"],
                "alt+enter": ["explorer.alt+enter"],
                "ctrl+a": ["explorer.selectFile", "toggleAll"],
                "backspace": ["explorer.selectFile", "back"],

                "up": ["explorer.arrow", "up"],
                "down": ["explorer.arrow", "down"]
            },
            "@case:explorer.explorerMode": {
                "rename-mode": {
                    "@key": {
                        "right": ["explorer.plus-minus", "+"],
                        "left": ["explorer.plus-minus", "-"]
                    }
                },
                "convert-mode": {
                    "@key": {
                        "right": ["explorer.plus-minus", "+"],
                        "left": ["explorer.plus-minus", "-"]
                    }
                }
            }
        }
    }
}
